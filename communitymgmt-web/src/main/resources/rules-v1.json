        "dateRange": {
          "start": "2025-07-01",
          "end": "2025-08-31"
        }
      },
      "condition": {
        "type": "TRUE"
      },
      "effect": {
        "type": "CANCEL"
      }
    },
    {
      "id": "rule_summer_eucharist_time",
      "name": "La Eucaristía cambia de horario en verano",
      "scope": {
        "celebrations": ["EUCHARIST"],
        "dateRange": {
          "start": "2025-07-01",
          "end": "2025-08-31"
        }
