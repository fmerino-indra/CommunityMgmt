{
  "rules": [
      {
      "id": "rule_christmas_word",
      "name": "Palabra se cancela en Navidad",
      "scope": {
        "celebrations": ["WORD"]
      },
      "condition": {
        "type": "FIXED_DATE",
        "value": { "month": 12, "day": 25 }
      },
      "effect": {
        "type": "CANCEL"
      }
    },
    {
      "id": "rule_no_eucharist_if_christmas_saturday",
      "name": "No hay Eucaristía si Navidad cae en sábado",
      "scope": {
        "celebrations": ["EUCHARIST"],
        "weekdays": ["SATURDAY"]
      },
      "condition": {
        "type": "FIXED_DATE",
        "value": { "month": 12, "day": 25 }
      },
      "effect": {
        "type": "CANCEL"
      }
    },
    {
      "id": "rule_word_cancel_on_national_holiday",
      "name": "Se cancela la Palabra si es festivo laboral",
      "scope": {
        "celebrations": ["WORD"]
      },
      "condition": {
        "type": "HOLIDAY",
        "value": { "holidayType": "NATIONAL" }
      },
      "effect": {
        "type": "CANCEL"
      }
    },
    {
      "id": "rule_holy_week_pause",
